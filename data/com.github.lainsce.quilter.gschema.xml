<schemalist>
	<schema id="com.github.lainsce.quilter" path="/com/github/lainsce/quilter/">
		<key name="window-x" type="i">
				<default>-1</default>
				<summary>Window position</summary>
				<description>The x axis of window position</description>
		</key>
		<key name="window-y" type="i">
				<default>-1</default>
				<summary>Window position</summary>
				<description>The y axis of window position</description>
		</key>
		<key name="window-height" type="i">
				<default>800</default>
				<summary>Window position</summary>
				<description>The height of the window</description>
		</key>
		<key name="window-width" type="i">
				<default>920</default>
				<summary>Window position</summary>
				<description>The width of the window</description>
		</key>
		<key name="focus-mode" type="b">
				<default>false</default>
				<summary>Focus Mode</summary>
				<description>Whether Quilter should be in Focus Mode</description>
			</key>
		<key name="dark-mode" type="b">
				<default>false</default>
				<summary>Dark Mode</summary>
				<description>Whether Quilter should be in Dark Mode</description>
			</key>
		<key name="sepia-mode" type="b">
				<default>false</default>
				<summary>Sepia Mode</summary>
				<description>Whether Quilter should be in Sepia Mode</description>
			</key>
		<key name="use-system-font" type="b">
				<default>true</default>
				<summary>Use system font</summary>
				<description>Whether Quilter should use the default system font</description>
			</key>
        <key name="autosave" type="b">
            <default>true</default>
            <summary>Autosave edited files</summary>
            <description>Autosave edited files.</description>
        </key>
		<key name="font" type="s">
				<default>'Quilt Mono 11'</default>
				<summary>Preferred Font</summary>
				<description>Set the preferred font</description>
		</key>
		<key name="last-file" type="s">
				<default>''</default>
				<summary>Last opened file</summary>
				<description>The last opened file in Quilter</description>
		</key>
		<key name="subtitle" type="s">
				<default>''</default>
				<summary>Last opened file markup for subtitle</summary>
				<description>The last opened file in Quilter, for subtitle</description>
		</key>
        <key name="spellcheck" type="b">
			    <default>true</default>
			    <summary>Enable spellcheck</summary>
        </key>
        <key name="spellcheck-language" type="s">
			    <default>""</default>
			    <summary>Spell check language used</summary>
			    <description>This must be the name of one of the installed languages</description>
        </key>
        <key name="statusbar" type="b">
			    <default>true</default>
			    <summary>Show (true) or Hide (false) the statusbar</summary>
        </key>
		<key name="latex" type="b">
			    <default>false</default>
			    <summary>Use the LaTeX built-in extension</summary>
        </key>
		<key name="highlight" type="b">
			    <default>false</default>
			    <summary>Use the Code Highlight built-in extension</summary>
        </key>
		<key name="show-num-lines" type="b">
			    <default>false</default>
			    <summary>Show (true) or Hide (false) the line numbers</summary>
        </key>
        <key name="fullscreen" type="b">
			    <default>false</default>
			    <summary>Whether Quilter should be fullscreen or not</summary>
        </key>
        <key name="spacing" type="i">
			    <default>4</default>
			    <summary>The spacing on the Editor View's lines</summary>
        </key>
        <key name="margins" type="i">
			    <default>80</default>
			    <summary>The margins for the Editor View</summary>
        </key>
        <key name="focus-mode-type" type="i">
			    <default>0</default>
			    <summary>The type of Focus Mode</summary>
        </key>
		</schema>
</schemalist>
