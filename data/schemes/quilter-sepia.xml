<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="quilter-sepia" _name="Quilter Sepia" version="1.0">
  <author>Lains</author>
  <_description>Emphasis on focus.</_description>

  <style name="text"            foreground="#2D1708" background="#f0e8dd"/>
  <style name="cursor"          foreground="#1d99f3"/>
  <style name="current-line"    background="#c1a073"/>
  <style name="selection"       foreground="#2D1708" background="#1d99f3"/>

  <!-- Bold -->
  <style name="def:statement" foreground="#2D1708"  bold="true"/>

  <!-- Italic -->
  <style name="def:doc-comment-element" foreground="#2D1708" italic="true"/>

  <!-- Links -->
  <style name="def:comment" foreground="#1d99f3"/>
  <style name="def:underlined" foreground="#1d99f3"/>

  <!-- Code -->
  <style name="def:identifier" foreground="#c1a073"/>

  <!-- Line-break -->
  <style name="def:note" foreground="#2D1708"/>

  <!-- Label -->
  <style name="def:preprocessor" foreground="#2D1708"/>

  <!-- Image marking in Links -->
  <style name="def:shebang" foreground="#1d99f3"/>
  <style name="def:constant" foreground="#1d99f3"/>

  <!-- Backslash Escaping -->
  <style name="def:special-char" foreground="#c1a073"/>

  <!-- Headers -->
  <style name="def:type" foreground="#2D1708" bold="true"/>
</style-scheme>
